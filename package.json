{
  "private": true,
  "name": "retrolist",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git@github.com:nuclearglow/retrolist.git"
  },
  "scripts": {
    "commit": "cz",
    "start": "run-s dev",
    "dev": "preact watch --host localhost --https --key .certs/localhost+3-key.pem --cert .certs/localhost+3.pem",
    "debug": "preact watch --host localhost --port 8888 --https --key .certs/localhost+3-key.pem --cert .certs/localhost+3.pem",
    "build": "preact build --prerender=false --no-inline-css",
    "serve": "sirv build --port 8080 --cors --single",
    "lint": "run-s lint:eslint lint:stylelint",
    "lint:eslint": "eslint src",
    "lint:stylelint": "stylelint \"**/*.scss\" --config .stylelintrc.json --fix --syntax=scss",
    "release": "standard-version",
    "deploy:remote": "node ./scripts/deploy.js",
    "deploy": "run-s build deploy:remote"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.scss": "stylelint --fix"
  },
  "dependencies": {
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "prop-types": "^15.7.2",
    "react-div-100vh": "^0.5.6",
    "unissist": "^1.4.0",
    "unistore": "^3.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "du": "^1.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "favicons-webpack-plugin": "^2.1.0",
    "husky": "^4.2.1",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "lint-staged": "^10.0.7",
    "node-ssh": "^11.1.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "preact-cli": "^3.0.0",
    "prettier": "^1.19.1",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "simple-ssh": "^1.0.0",
    "sirv-cli": "1.0.3",
    "standard-version": "^9.1.0",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-scss": "^3.18.0"
  }
}
